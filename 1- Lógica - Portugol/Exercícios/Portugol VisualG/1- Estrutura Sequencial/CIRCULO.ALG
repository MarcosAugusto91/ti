Algoritmo "Circulo"

Var
   r, area, p : real

Inicio

      escreval("Bem vindo, este programa calcula a área do circulo")
      escreva("Escreva o raio do círculo: ")
      leia(r)

      p <- pi
      area <- (p*(r*r))
      
      escreval()
      escreva("Área da circunferência: ",area:5:3)

Fimalgoritmo